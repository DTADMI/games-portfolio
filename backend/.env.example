SPRING_PROFILES_ACTIVE=local
DB_HOST=localhost
DB_PORT=5432
DB_NAME=gamesdb
DB_USER=postgres
DB_PASSWORD=postgres

# JWT / Refresh tokens
APP_JWT_SECRET=change_me
# Access token expiration in ms (e.g., 1 hour)
APP_JWT_EXPIRATION_IN_MS=3600000
# Refresh token expiration in ms (e.g., 30 days)
REFRESH_TOKEN_EXPIRATION_MS=2592000000

# CORS
CORS_ALLOWED_ORIGINS=http://localhost:3000

# Backend/.env
NEXT_FIREBASE_CREDS_TYPE=service_account
NEXT_FIREBASE_CREDS_PROJECT_ID=your-project-id
NEXT_FIREBASE_CREDS_PRIVATE_KEY_ID=your-private-key-id
NEXT_FIREBASE_CREDS_PRIVATE_KEY=your-base64-encoded-private-key
NEXT_FIREBASE_CREDS_CLIENT_EMAIL=your-client-email
NEXT_FIREBASE_CREDS_CLIENT_ID=your-client-id
NEXT_FIREBASE_CREDS_AUTH_URI=https://accounts.google.com/o/oauth2/auth
NEXT_FIREBASE_CREDS_TOKEN_URI=https://oauth2.googleapis.com/token
NEXT_FIREBASE_CREDS_AUTH_PROVIDER_X509_CERT_URL=https://www.googleapis.com/oauth2/v1/certs
NEXT_FIREBASE_CREDS_CLIENT_X509_CERT_URL=your-client-cert-url
NEXT_FIREBASE_CREDS_UNIVERSE_DOMAIN=googleapis.com
