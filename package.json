{
  "name": "react-games-monorepo",
  "version": "1.0.0",
  "private": true,
  "packageManager": "bun@1.1.20",
  "workspaces": [
    "frontend",
    "games/*",
    "libs/*",
    "libs/shared"
  ],
  "scripts": {
    "dev": "bun run dev:services",
    "dev:services": "run-p dev:backend dev:frontend",
    "dev:backend": "bun --cwd backend run dev || (cd backend && mvn spring-boot:run)",
    "dev:frontend": "bun --cwd frontend run dev",
    "build": "run-s build:backend build:frontend",
    "build:frontend": "bun --cwd frontend run build",
    "build:backend": "cd backend && mvn -q -DskipTests package",
    "lint": "run-p lint:*",
    "lint:root": "eslint .",
    "format": "prettier --write .",
    "test": "run-p test:* || true",
    "test:frontend": "bun --cwd frontend run test || echo 'frontend tests pending'",
    "test:backend": "cd backend && mvn -q -DskipTests=false test",
    "prepare": "husky install"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.3.1",
    "@eslint/js": "^9.39.1",
    "concurrently": "^8.2.0",
    "eslint": "^9.14.0",
    "eslint-config-next": "^16.0.5",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^7.0.1",
    "husky": "^9.1.6",
    "lint-staged": "^15.2.10",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.3.3"
  },
  "lint-staged": {
    "**/*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "**/*.{json,md,css}": [
      "prettier --write"
    ]
  }
}
